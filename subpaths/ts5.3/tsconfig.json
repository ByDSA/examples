{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": ".",
    "paths": {
      "#lib/*": ["./lib/build/*"],
      "#modules/*": ["./src/modules/*"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
